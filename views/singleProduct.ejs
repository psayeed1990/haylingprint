<div class="page">
    <% if(typeof product != 'undefined'){ %>
    
    
    <div class="single-product-page">
        <img src="/img/products/<%= product.imageCover %>" width="300">
        <a href="/products/<%= product.id%>">
            <h3><%= product.name %></h2>
        </a>
    
        <a href="/categories/<%= product.category.id %>">
                    <p style="color: cadetblue;">Category: <%= product.category.name %></p>
                </a>
        <p style="padding: 20px; border-bottom: 1px solid; width: max-content; margin: 20px auto"> <%= product.description %></p>



                <!-- variable codes -->
                <% if(product.variants.length >= 0){ %>
                    <div id="variants" style="display: none;">
                    <%= JSON.stringify(product.variants) %>
                    </div>
                <% } %>
                    

                


                <div style="margin: 30px;" id="variable-form">

                    <label id="base-name" style="font-weight: bold;">
                        
                    </label>

                </div>

                <div style="margin: 30px;" id="secondLevel-form">

                    <label id="secondLevel-name" style="font-weight: bold; padding-right: 40px;"></label>

                </div>
                <label id="thirdLevel-name" style="font-weight: bold;"></label>
                <select name="thirdVariableName" style="margin: 30px auto; display: inline;" id="thirdLevel-form">
                
                    
                
                </select>

    
        <p>Price: <span class="numbers" id="price">Â£<%= product.price %></span></p>
        
    
        <form action="/add-to-cart" method="POST" enctype="multipart/form-data">
            <input id="quantity" name="quantity" type="hidden"
                style="width: 40px; display: inline;" value="1" min="1" required>
            <input type="hidden" id="product-id" name="product" value="<%= product.id%>">
            <input type="hidden" id="sku" name="SKU" value="<%= product.SKU %>">
            <br>

            <% if(product.laminatingPrice){ %>
                <label style="display: inline;padding: 8px;margin: 0px;">Laminate:</label>
                <select name="laminatingPrice" required>
                    <option>No Laminate</option>
                    <option value="<%= product.laminatingPrice %>">Laminate</option>
                    
                </select>
            
            <% } %>
            <br>

            
            <br><br><label>Upload a design of your choice</label><input style="width: 150px;" type="file" id="imageCover" name="imageCover">
            
            
            
            
            
            

            <input type="submit" id="add-cart" class="add-cart" value="Add to cart">
            <a id="message-info" href="/cart">Added to cart. Visit cart</a>
        </form>
    
    
    </div>
        <script src="/js/main.js">

            
        </script>
        
    <% } %>
</div>


