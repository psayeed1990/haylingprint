<div class="page">
    <div class="product-admin">
    <p><%= typeof message != 'undefined' ? message : '' %></p>
 
<% if (typeof doc == 'undefined') { %>
    <p></p>
<% } %>


 
 <% if (typeof doc != 'undefined') { %>
            <% let counter = 1 %>
        <% doc.forEach((product) => { %>
                    <a href="/admin/products/<%= product.id%>">
                    <div class="single-product">
                        <p><%= counter %></p>
                        <img src="/img/products/<%= product.imageCover %>" width="50">
                        <p><%= product.name %></p>
                        <% if (product.category) { %>
                            <p>cat: <%= product.category.name %></p>
                        <% } %>
                        
                     
                       
                        
                
                    </div>
                    </a>
                    <% counter +=1 %>
                <% }) %>

                


<% } %>

</div>
</div>