
<div id="page">
    <div id="checkout">


        <% if(typeof carts != 'undefined') {%>
            <% let cartCount = 0 %>
            <% let totalPrice = 0 %>
            <%for(var i = 0; i < carts.length; i++) { %>
                <% cartCount += carts[i].quantity %>
                <% totalPrice += (carts[i].quantity * carts[i].product.price) %>
            <% } %>
            <p>Total quantity: <%= cartCount %></p>
            <p>Total Price: <%= totalPrice %></p>


            <form method="POST" action="/pay">
                <input type="hidden" value="" name="id">
                <input type="hidden" value="<%= totalPrice %>" name="amount">
                <input type="text" placeholder="Name" value="<%= user.name %>" name="name" required>
                <input type="text" placeholder="Email" value="<%= user.email %>" name="email" required>
                <input type="text" placeholder="Address, zip, city, state, country" value="<%= user.address %>" name="address" disabled>
                <input type="text" placeholder="Phone" name="phone" value="<%= user.phone %>" required> 
                <textarea name="orderComment" placeholder="Order comment (optional)"></textarea>
                <p style="font-family: open sans condensed;">*To change address please go to your profile details</p>
                <input style="background-color: #07800e;" type="submit" value="Place Order">
            </form>

        <% } %>



    </div>
</div>

